# Production Environment Variables
# Copy this file to .env.production for production builds

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=production

# MySQL Database Configuration
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=jobautomate

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_here

# Resume Storage Path
RESUME_UPLOAD_PATH=./uploads/resumes

# Job Search Configuration
MAX_PAGES_TO_PROCESS=10

# Razorpay Configuration (Production Mode)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# API Configuration
# For production deployment on Render
VITE_API_BASE_URL=https://job-automate.onrender.com/api
